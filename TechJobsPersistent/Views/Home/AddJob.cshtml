@model TechJobsPersistent.ViewModels.AddJobViewModel
<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Employer</label>
        <select asp-for="EmployerId" class="form-control" asp-items="Model.Employers"></select>

        <a href="../Employer/Add">Add Employer</a>
    </div>
    <input type="submit" value="Add Job" />
</form>

